{
  "manifest_version": 3,
  "name": "Open in Photopea",
  "description": "Context menu item to open images in Photopea",
  "version": "1.0",
  "permissions": ["contextMenus"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "photopea.png",
    "32": "photopea.png",
    "48": "photopea.png",
    "128": "photopea.png"
  }
}
